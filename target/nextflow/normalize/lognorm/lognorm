# # store new entry
# new_entry = {"component": meta["functionality_name"], "params": par}
# mdata.uns["execution_log"].append(new_entry)

print("Writing to file")
mdata.write(filename=par["output"])
VIASHMAIN
python "\$tempscript"

VIASHEOF
