import muon as mu
import numpy as np

### VIASH START
# The following code has been auto-generated by Viash.
par = {
  'input': $( if [ ! -z ${VIASH_PAR_INPUT+x} ]; then echo "'$VIASH_PAR_INPUT'"; else echo None; fi ),
  'modality': $( if [ ! -z ${VIASH_PAR_MODALITY+x} ]; then echo "'$VIASH_PAR_MODALITY'.split(':')"; else echo None; fi ),
  'obs_filter': $( if [ ! -z ${VIASH_PAR_OBS_FILTER+x} ]; then echo "'$VIASH_PAR_OBS_FILTER'.split(':')"; else echo None; fi ),
  'var_filter': $( if [ ! -z ${VIASH_PAR_VAR_FILTER+x} ]; then echo "'$VIASH_PAR_VAR_FILTER'.split(':')"; else echo None; fi ),
  'output': $( if [ ! -z ${VIASH_PAR_OUTPUT+x} ]; then echo "'$VIASH_PAR_OUTPUT'"; else echo None; fi )
}
