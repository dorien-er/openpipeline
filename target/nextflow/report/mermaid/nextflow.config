  docker.enabled = true
  def viash_temp = System.getenv("VIASH_TEMP") ?: "/tmp/"
  docker.runOptions = "-i -v ${baseDir}:${baseDir} -v $viash_temp:$viash_temp"
  process.container = "dataintuitive/viash"
  params {
    mermaid__input = "viash_no_value"
    mermaid__output = "viash_no_value"
    mermaid__test = "test.py"
    id = ""
    testScript = "test.py"
    testResources = [ "test.py" ]
    mermaid {
      name = "mermaid"
      container = "report_mermaid"
      containerTag = "main_build"
      containerRegistry = "ghcr.io"
      containerOrganization = "openpipeline"
      command = "mermaid"
      tests {
        isDefined = true
        testScript = "test.py"
        testResources = [ "test.py" ]
      }
      arguments {
        input {
          name = "input"
          otype = "--"
          required = true
          type = "file"
          direction = "Input"
          multiple = false
          multiple_sep = ":"
          value = "${params.mermaid__input}"
          description = "Input directory"
        }
        output {
          name = "output"
          otype = "--"
          required = true
          type = "file"
          direction = "Output"
          multiple = false
          multiple_sep = ":"
          value = "${params.mermaid__output}"
          description = "Generated network as output."
        }
        test {
          name = "test"
          otype = "--"
          required = false
          type = "file"
          direction = "Input"
          multiple = false
          multiple_sep = ":"
          value = "${params.mermaid__test}"
          dflt = "test.py"
          description = "The test file to be executed"
        }
      }
    }
  }